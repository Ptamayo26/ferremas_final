    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.20.0",
    "react-slick": "^0.30.3",
    "recharts": "^2.8.0",
    "slick-carousel": "^1.8.1",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
